<% if @user.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
<ul>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>

<div id="signup">
  <section class="main-bkg">
    <div class="main-container">
      <div class="col-left">
        <h2>Connect with friends and the<br>world around you on Facebook</h2>
        <table class="feature">
          <tr>
            <td>
              <i class="fa fa-eye" aria-hidden="true"></i></td>
            <td>
              <span>See photos and posts</span>
              <span class="smaller">from your friends.</span>
            </td>
          </tr>
          <tr>
            <td>
              <i class="fa fa-share-alt" aria-hidden="true"></i></td>
            <td>
              <span>Share what's new</span>
              <span class="smaller">in your life with others.</span>
            </td>
          </tr>
          <tr>
            <td>
              <i class="fa fa-handshake-o" aria-hidden="true"></i></td>
            <td>
              <span>Make connections</span>
              <span class="smaller">by searching for people you know.</span>
            </td>
          </tr>
        </table>
      </div>
      <div class="col-right">
        <h1>Sign Up</h1>
        <h3>Let's get started!</h3>
        <%= form_with(model: @user, local: true) do |f| %>

          <%= f.text_field :name, class: "input",
                                        placeholder: "Name" %>
          <%= f.email_field :email, class: "input",
                                       placeholder: "Email" %>
          <%= f.password_field :password, class: "input",
                                   placeholder: "Password" %>
          <%= f.password_field :password_confirmation, class: "input",
                                          placeholder: "Password confirmation" %>
          <%= f.submit "Create my account" %>
          <% end %>
      </div>
    </div>
  </section>
</div>
