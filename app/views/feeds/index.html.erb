<p id="notice"><%= notice %></p>
<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title">Activity Feed</h3>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to new_feed_path do %><span>New Post</span><% end %></h3>
  </div>
  <% @feeds.each do |feed| %>
  <ul class="panel-activity__list">
    <li>
      <div class="activity__list__header">
        <strong><%= current_user.name%></strong><span> posted:</span>
      </div>
      <div class="activity__list__body ">
        <p>
          <%= feed.post %>
        </p>
        <p>
          <%= image_tag feed.image.url %>
        </p>
      </div>
      <div class="activity__list__footer">
        <a><%= link_to feed do %><span>Show</span> <% end %></a>
        <a><%= link_to edit_feed_path(feed) do %><span>Edit</span> <% end %></a>
        <a><%= link_to feed, method: :delete, data: { confirm: 'Are you sure?' } do %><span>Delete</span> <% end %></a>
        <span> <i class="fa fa-clock"></i>2 hours ago</span>
      </div>
    </li>
  </ul>
  <% end %>
</div>
